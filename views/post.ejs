<!DOCTYPE html>
<html lang="en">

<%- include('partials/_header') %>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.description.length > 50 ? post.description.substring(0, 50) + '...' : post.description %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.description %></p>
            <!-- Share box -->
            <div class="row justify-content-center">
              <div class="col-auto">
                <a href="/posts/edit/<%= post._id %>" class="btn btn-primary p-1 mb-4"><span>Update Post</span></a>
              </div>
              <div class="col-auto">
                <a href="/posts/<%= post._id%>?_method=DELETE" class="btn btn-danger p-1 mb-4" onclick="return confirm('ARE YOU SURE?')"><span>Delete Post</span></a>
              </div>
            </div>
        </div>
      </div>
    </div>
  </article>
  
  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') %>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
